<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cs"
            type="io.github.austinread.rolladex.entities.CharacterSheet" />

        <import type="io.github.austinread.rolladex.utils.BindingUtils" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/cb_character_inspiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="@={cs.inspiration}"
                android:text="@string/inspiration"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/proficiency"
                    android:textColor="#000"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/et_character_proficiency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/single_character_filler"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:text="@={BindingUtils.intToString(cs.proficiency)}"
                    android:textSize="25sp"
                    tools:text="2" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/container_strength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.15"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_label_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/strength" />

                    <TextView
                        android:id="@+id/tv_character_strength_mod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{BindingUtils.getAbilityModifierString(cs.strength)}"
                        android:textSize="50sp"
                        tools:text="+0" />

                    <TextView
                        android:id="@+id/tv_character_strength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@={BindingUtils.intToString(cs.strength)}"
                        android:textSize="25sp"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_dex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/container_con"
                    app:layout_constraintStart_toEndOf="@+id/container_strength"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_label_dex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dexterity" />

                    <TextView
                        android:id="@+id/tv_character_dex_mod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@{BindingUtils.getAbilityModifierString(cs.dexterity)}"
                        android:textSize="50sp"
                        tools:text="+0" />

                    <TextView
                        android:id="@+id/tv_character_dex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@={BindingUtils.intToString(cs.dexterity)}"
                        android:textSize="25sp"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_con"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_label_con"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/constitution" />

