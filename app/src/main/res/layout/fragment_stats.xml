                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0">

                    <CheckBox
                        android:id="@+id/cb_saving_wis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={cs.proficientSavingWis}"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/wisdom"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_saving_wis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{BindingUtils.getSkillWithProficiencyStr(cs.wisdom, cs.proficientSavingWis, cs.proficiency)}"
                        android:textSize="20sp"
                        tools:text="0" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/container_saving_char"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1">

                    <CheckBox
                        android:id="@+id/cb_saving_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={cs.proficientSavingChar}"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/charisma"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_saving_char"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{BindingUtils.getSkillWithProficiencyStr(cs.charisma, cs.proficientSavingChar, cs.proficiency)}"
                        android:textSize="20sp"
                        tools:text="0" />
                </LinearLayout>
            </GridLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/skills"
                android:textSize="25sp" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:rowCount="9">

                <LinearLayout
                    android:id="@+id/container_acrobatics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0">

                    <CheckBox
                        android:id="@+id/cb_acrobatics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="@={cs.proficientAcrobatics}"
                        android:paddingStart="0sp"
                        android:paddingLeft="0sp"
                        android:paddingEnd="10sp"
                        android:paddingRight="10sp"
                        android:text="@string/Acrobatics"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_acrobatics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
